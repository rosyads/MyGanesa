<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.BayarActivity">

    <Spinner
        android:id="@+id/spinnerBulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:prompt="@string/spinner_title"
        android:layout_marginTop="64dp"/>

    <Button
        android:id="@+id/btnConfirmBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerBulan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Konfirmasi Bayar"/>

    <ImageView
        android:id="@+id/imageViewQrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConfirmBayar"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnKembali"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewQrCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Kembali" />

</RelativeLayout>